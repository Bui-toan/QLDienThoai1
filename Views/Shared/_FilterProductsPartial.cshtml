@{
    var currentUrl = Url.ActionContext.HttpContext.Request.Path;
    var currentQuery = Url.ActionContext.HttpContext.Request.QueryString.ToString();
}
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <h5>Sắp xếp theo</h5>
            <select class="form-control" id="sort_by">
                <option value="">-----------------</option>
                <option value="price_increase">Giá tăng dần</option>
                <option value="price_decrease">Giá giảm dần</option>
                <option value="price_newest">Mới nhất</option>
                <option value="price_oldest">Cũ nhất</option>
            </select>
        </div>
        <div class="col-md-5">
            <h5>Lọc theo giá</h5>
            <p>
                <label for="amount">Khoảng giá:</label>
                <input type="text" id="amount" readonly="" style="border:0; color:#f6931f; font-weight:bold;">
            </p>

            <p><div id="slider-range"></div></p>
            <p><button id="btn-locgia" class="btn btn-danger">Lọc</button></p>
        </div>
    </div>
</div>
