@model LoginViewModel

@{
	ViewData["Title"] = "Register";
}

@if (TempData["success"] != null)
{
		<div class="alert alert-success">
		@TempData["success"]
		</div>
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>PasswordHash</label>
							<input asp-for="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<button class="btn btn-default">Login</button>
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a>
					</form>
				</div><!--/login form-->
			</div>
			
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}