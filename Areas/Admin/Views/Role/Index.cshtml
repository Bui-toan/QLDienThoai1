@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "List Role";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>List Role</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Role">Add Role</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td></td>

                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                        @* <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>