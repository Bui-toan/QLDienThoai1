@model IEnumerable<QLDienThoai.Models.ProductAPI>

<h2>Danh sách Sản phẩm</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên Sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.IdSanPham</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td><img src="@product.Images" alt="Image" width="50" /></td>
                <td>Edit | Delete</td>
            </tr>
        }
    </tbody>
</table>

<!-- Form để thêm sản phẩm mới -->
<h3>Thêm Sản phẩm</h3>
<form method="post">
    <div class="form-group">
        <label for="IdSanPham">Mã Sản phẩm</label>
        <input type="text" id="IdSanPham" name="IdSanPham" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Tên Sản phẩm</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Mô tả</label>
        <input type="text" id="Description" name="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Price">Giá</label>
        <input type="text" id="Price" name="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label for="BrandId">Brand ID</label>
        <input type="text" id="BrandId" name="BrandId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CategoriesId">Categories ID</label>
        <input type="text" id="CategoriesId" name="CategoriesId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Images">Hình ảnh</label>
        <input type="text" id="Images" name="Images" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Thêm Sản phẩm</button>
</form>
