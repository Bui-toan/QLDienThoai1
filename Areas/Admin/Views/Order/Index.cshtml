@using QLDienThoai.Models
@model IEnumerable<Order>
@{
    ViewData["title"] = "Order Lists";
}

<h1>List Orders</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">UserName</th>
 
            <th scope="col">Order Date</th>
            <th scope="col">Order Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th></th>
                <th scope="row">@item.OrderCode</th>
                <td>@item.UserName</td>
               
                <td>@item.CreateDate</td>
                <td>
                    @if (item.Status==1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-success">Đơn hàng thành công </span>
                    }
                </td>
                <td>
                    <a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View Order</a>
                   
                </td>

            </tr>
        }
    </tbody>
</table>